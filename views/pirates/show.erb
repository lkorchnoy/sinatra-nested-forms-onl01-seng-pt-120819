<h1>Pirates</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %> pounds</h4><br>
  <h4>Height: <%= @pirate.height %> inches</h4>
</div><br>

<h1>Ships</h1>
<ul>
<% @ships.each do |ship| %>
<li>Name: <%= ship.name %></li>
<li>Type: <%= ship.type %></li>
<li>Booty: <%= ship.booty %></li>
<% end %>
</ul>

